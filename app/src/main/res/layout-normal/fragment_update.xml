<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="20dp"
    android:background="@drawable/primary"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFFFFFF"
                android:text="@string/basic_info"
                android:textStyle="bold"
                android:layout_marginBottom="7dp"/>
            <EditText
                android:background="@drawable/list_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="5dp"
                android:inputType="textPersonName"
                android:id="@+id/firstname"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:gravity=""
                android:hint="@string/first_name"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:id="@+id/fname_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_name_req"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#e7645d"
                android:visibility="gone"
                android:layout_marginBottom="4dp"
                />
            <EditText
                android:background="@drawable/list_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:id="@+id/middlename"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:gravity=""
                android:hint="@string/middle_name"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:id="@+id/mname_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_name_req"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#e7645d"
                android:visibility="gone"
                android:layout_marginBottom="4dp"
                />

            <EditText
                android:background="@drawable/list_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:id="@+id/lastname"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:gravity=""
                android:hint="@string/last_name"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:id="@+id/lname_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_name_req"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#e7645d"
                android:visibility="gone"
                android:layout_marginBottom="4dp"
                />

            <EditText
                android:background="@drawable/list_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/email"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:hint="@string/Email"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:id="@+id/email_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_req"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#e7645d"
                android:visibility="gone"
                android:layout_marginBottom="4dp"
                />
            <EditText
                android:background="@drawable/list_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="16sp"
                android:id="@+id/contact"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:drawableStart="@drawable/ic_call_black_24dp"
                android:gravity=""
                android:hint="@string/Contact"
                android:inputType="phone"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:id="@+id/contact_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_req"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#e7645d"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:background="@drawable/list_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="16sp"
                android:visibility="gone"
                android:id="@+id/dob"
                android:drawableLeft="@drawable/ic_today_black_24dp"
                android:drawableStart="@drawable/ic_today_black_24dp"
                android:hint="@string/DOB"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:id="@+id/dob_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DOB_req"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#e7645d"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:background="@drawable/list_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:inputType="textEmailAddress"
                android:id="@+id/address"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:hint="@string/Address"
                android:layout_marginBottom="7dp"
                />
            <TextView
            android:id="@+id/address_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_req"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#e7645d"
            android:visibility="gone"
            android:layout_marginBottom="4dp"/>
            <EditText
                android:background="@drawable/list_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:maxLength="6"
                android:inputType="phone"
                android:id="@+id/pincode"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:hint="@string/Pincode"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:text="@string/pin_req"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:textStyle="bold"
                android:textSize="18sp"
                android:visibility="visible"
                android:textColor="#FFFFFF"
                android:text="@string/Profile_Image"
                android:layout_marginBottom="7dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:visibility="visible"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/img"/>
            <Button
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_img"
                android:id="@+id/buttn_image"
                android:layout_marginBottom="7dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update_profile"
                android:id="@+id/register"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_style"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
